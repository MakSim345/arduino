/*
* Код для мигания светодиодом на пине 13
* без использования функции delay() на Arduino Uno может выглядеть следующим образом:
* Этот код использует функцию millis() для определения времени,
* прошедшего с момента запуска программы, и изменяет состояние светодиода
* только после того, как прошло достаточно времени.
* Это позволяет избежать использования функции delay(), которая может
* замедлить выполнение других задач в программе.
*/

const int ledPin = 13; // устанавливаем пин для светодиода

unsigned long previousMillis = 0; // переменная для хранения времени последнего изменения состояния светодиода
const long interval = 1000; // интервал между изменениями состояния светодиода (в миллисекундах)

int ledState = LOW; // начальное состояние светодиода

void setup()
{
  pinMode(ledPin, OUTPUT); // устанавливаем пин для светодиода как выход
}

void loop()
{
  // получаем текущее время в миллисекундах
  unsigned long currentMillis = millis();

  if (currentMillis - previousMillis >= interval)
  {
    // если прошло достаточно времени
    previousMillis = currentMillis; // сохраняем время последнего изменения состояния светодиода

    if (ledState == LOW)
    {
      // если светодиод выключен
      ledState = HIGH; // включаем светодиод
    }
    else
    {
      // если светодиод включен
      ledState = LOW; // выключаем светодиод
    }

    digitalWrite(ledPin, ledState); // устанавливаем состояние светодиода
  }
}

